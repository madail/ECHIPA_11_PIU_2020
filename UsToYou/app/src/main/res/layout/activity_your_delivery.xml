<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourDeliveryActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_pizzaDetailsDelivery"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/pizzaDeliveryNameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/name"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rv_pizzaDetailsDelivery" />

        <EditText
            android:id="@+id/pizzaDeliveryNameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/your_name"
            android:inputType="text"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryNameText" />

        <TextView
            android:id="@+id/pizzaDeliveryPhoneText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/phone"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryNameEditText" />

        <EditText
            android:id="@+id/pizzaDeliveryPhoneEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/phone_number"
            android:inputType="phone"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryPhoneText" />

        <TextView
            android:id="@+id/pizzaDeliveryAddressText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/address"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryPhoneEditText" />

        <EditText
            android:id="@+id/pizzaDeliveryAddressEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:ems="10"
            android:hint="@string/your_current_address"
            android:inputType="textPostalAddress"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryAddressText" />

        <TextView
            android:id="@+id/pizzaDeliveryTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="@string/total_0"
            android:textColor="@color/primaryDarkColor"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryAddressEditText" />

        <Button
            android:id="@+id/pizzaDeliveryButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/radius_dark_button"
            android:onClick="payOrder"
            android:padding="10dp"
            android:text="@string/payment_method"
            android:textColor="@color/white"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/pizzaDeliveryTotal" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/primaryColor"
        app:itemIconTint="@color/white"
        app:itemTextColor="@color/white"
        app:menu="@menu/drawer_menu" />
</androidx.drawerlayout.widget.DrawerLayout>
