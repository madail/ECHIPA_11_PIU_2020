<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UploadFileActivity">

    <TextView
        android:id="@+id/uploadResume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload your resume"
        android:textColor="@color/primaryDarkColor"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="20dp"
        android:textSize="18sp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/image_name"
            android:layout_width="wrap_content"
            android:hint="image uri"
            android:layout_margin="20dp"
            android:focusable="false"
            android:clickable="false"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/add_image"
            android:layout_width="wrap_content"
            android:text="Add Resume"
            android:onClick="fetchFiles"
            android:background="@drawable/radius_dark_button"
            android:textColor="@color/white"
            android:layout_alignParentEnd="true"
            android:layout_margin="20dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_height="wrap_content" />
    </RelativeLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:onClick="continueToConfirmation"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:background="@drawable/radius_dark_button"
        android:textColor="@color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        />

</LinearLayout>