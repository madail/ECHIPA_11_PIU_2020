<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/primaryLightColor"
    app:cardCornerRadius="15dp"
    android:layout_margin="5dp">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_height="wrap_content"
        android:layout_width="match_parent"
        >

        <ImageView
            android:id="@+id/provider_it_item_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/luci"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/provider_it_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/provider_it_item_imageView"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Name: "
            android:layout_marginTop="5dp"
            />

        <TextView
            android:id="@+id/provider_it_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/provider_it_item_imageView"
            app:layout_constraintTop_toTopOf="@id/provider_it_item_name"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Address: "
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/provider_it_item_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/provider_it_item_imageView"
            app:layout_constraintTop_toTopOf="@id/provider_it_item_address"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Price: "
            android:layout_marginTop="30dp"
            />

        <TextView
            android:id="@+id/provider_it_item_qualification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="@+id/provider_it_item_imageView"
            app:layout_constraintTop_toTopOf="@id/provider_it_item_price"
            android:textSize="20dp"
            android:textColor="@color/white"
            android:text="Qualification: "
            android:layout_marginTop="30dp"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
